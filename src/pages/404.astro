---
import Layout from '../layouts/Layout.astro';
import ButtonSub from '../components/ButtonSub.astro';
import { ArrowLeft } from 'lucide-astro';

// Metadatos para SEO
const title = "Página no encontrada | MenteSana";
const description = "Lo sentimos, la página que estás buscando no existe o ha sido movida.";
---

<Layout 
  title={title}
  description={description}
>
  <main id="main-content" class="flex min-h-screen flex-col items-center justify-center py-12">
    <section class="w-full max-w-4xl mx-auto px-4 sm:px-6 text-center">
      <div class="mb-8">
        <div class="relative mx-auto mb-6 h-24 w-24 text-primary-500">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="w-full h-full">
            <circle cx="12" cy="12" r="10"></circle>
            <line x1="12" y1="8" x2="12" y2="12"></line>
            <line x1="12" y1="16" x2="12.01" y2="16"></line>
          </svg>
          <span class="absolute top-0 right-0 flex h-10 w-10 items-center justify-center rounded-full bg-primary-500 text-xl font-bold text-white">4</span>
          <span class="absolute bottom-0 left-0 flex h-10 w-10 items-center justify-center rounded-full bg-primary-500 text-xl font-bold text-white">4</span>
        </div>
        
        <h1 class="text-4xl sm:text-5xl font-bold text-gray-100 mb-4">Página no encontrada</h1>
        <p class="text-lg text-gray-400 max-w-lg mx-auto">Lo sentimos, la página que estás buscando no existe o ha sido movida a otra ubicación.</p>
      </div>
      
      <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
        <ButtonSub to="/" hasIcon={true} iconName="ArrowLeft">
          Volver al inicio
        </ButtonSub>
        <ButtonSub to="/blog">
          Visitar nuestro blog
        </ButtonSub>
        <ButtonSub to="/#contact">
          Contactar con nosotros
        </ButtonSub>
      </div>
      
      <div class="mt-12 text-gray-500 text-sm">
        <p>Si crees que esto es un error, por favor <a href="mailto:ifcovelo.71@gmail.com" class="text-primary-400 hover:underline">contáctanos</a>.</p>
      </div>
    </section>
  </main>
</Layout> 