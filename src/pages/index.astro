---
import Header from '../components/Header/Header.astro';
import Hero from '../components/Main/Hero/Hero.astro';
import Features from '../components/Main/Features.astro';
import Layout from '../layouts/Layout.astro';
import Footer from '../components/Footer/Footer.astro';
import Services from '../components/Main/Services.astro';
import Team from '../components/Main/Team.astro';
import Testimonials from '../components/Main/Testimonials.astro';
import FAQ from '../components/Main/FAQ.astro';
import Contact from '../components/Main/Contact.astro';
import Appointment from '../components/Main/Appointment.astro';
import Blog from '../components/Main/Blog.astro';
import Resources from '../components/Main/Resources.astro';

// Metadatos para SEO
const title = "MenteSana | Centro de Psicología Especializada en Madrid";
const description = "Somos especialistas en salud mental, ofreciendo terapias psicológicas personalizadas para ansiedad, depresión, estrés y más. Primera consulta gratuita.";
const keywords = "psicología, salud mental, psicólogos Madrid, terapia online, ansiedad, depresión, terapia de pareja, psicología infantil, estrés, bienestar emocional";
const image = "/img/social-image.jpg";
---

<Layout 
	title={title}
	description={description}
	keywords={keywords}
	image={image}
	canonicalURL={Astro.url.href}
>
	<Header />
	<main id="main-content">
		<Hero />
		<Services />
		<Features />
		<Team />
		<Testimonials />
		<Appointment />
		<Resources />
		<Blog />
		<FAQ />
		<Contact />
	</main>
	<Footer />
</Layout>
