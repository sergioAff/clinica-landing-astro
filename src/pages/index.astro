---
import Header from '../components/Header/Header.astro';
import Hero from '../components/Main/Hero/Hero.astro';
import Features from '../components/Main/Features.astro';
import Layout from '../layouts/Layout.astro';
import Footer from '../components/Footer/Footer.astro';
import Services from '../components/Main/Services.astro';
import Team from '../components/Main/Team.astro';
import Testimonials from '../components/Main/Testimonials.astro';
import FAQ from '../components/Main/FAQ.astro';
import Contact from '../components/Main/Contact.astro';
import Blog from '../components/Main/Blog.astro';
import Resources from '../components/Main/Resources.astro';
import Appointment from '../components/Main/Appointment.astro';
import SchemaOrg from '../components/SchemaOrg.astro';

// Metadatos para SEO mejorados
const title = "MenteSana | Psicólogos Especializados en Terapia Emocional en Madrid";
const description = "Centro de psicología profesional en Madrid especializado en ansiedad, depresión, trauma y terapia de pareja. Enfoque centrado en la persona con evidencia científica. Primera sesión evaluativa gratuita.";
const keywords = "psicólogos Madrid, terapia psicológica, ansiedad, depresión, terapia de pareja, trauma, psicología online, terapia cognitivo-conductual, mindfulness, bienestar emocional, psicólogo cerca de mí, salud mental profesional";
const image = "/img/social-image.jpg";

// Datos estructurados para schema.org
const clinicInfo = {
  name: "MenteSana - Centro de Psicología",
  description: "Centro de psicología profesional especializado en el tratamiento de problemas emocionales y trastornos psicológicos utilizando terapias basadas en la evidencia científica.",
  address: {
    street: "Calle Goya, 123",
    city: "Madrid",
    postalCode: "28001",
    country: "ES",
    region: "Madrid"
  },
  telephone: "+34 910 123 456",
  email: "info@mentesana.com",
  openingHours: ["Mo-Fr 09:00-20:00", "Sa 10:00-14:00"],
  services: [
    {
      name: "Terapia Individual",
      description: "Sesiones personalizadas para tratar problemas específicos como ansiedad, depresión y estrés."
    },
    {
      name: "Terapia de Pareja",
      description: "Mejora de la comunicación y resolución de conflictos en la relación de pareja."
    },
    {
      name: "Psicología Infantil",
      description: "Apoyo especializado para niños y adolescentes con desafíos emocionales."
    },
    {
      name: "Mindfulness y Meditación",
      description: "Técnicas de atención plena para reducir el estrés y mejorar la gestión emocional."
    }
  ],
  specialists: [
    {
      name: "Dra. Ana Martínez",
      jobTitle: "Psicóloga Clínica",
      description: "Especialista en terapia cognitivo-conductual con más de 10 años de experiencia."
    },
    {
      name: "Dr. Carlos López",
      jobTitle: "Psicólogo Sanitario",
      description: "Experto en terapia de pareja y sexología con enfoque sistémico."
    },
    {
      name: "Dra. Elena Rodríguez",
      jobTitle: "Neuropsicóloga",
      description: "Especialista en evaluación y rehabilitación neuropsicológica."
    }
  ]
};
---

<Layout 
	title={title}
	description={description}
	keywords={keywords}
	image={image}
	canonicalURL={Astro.url.href}
	author="MenteSana - Equipo de Psicólogos"
	publishedTime={new Date().toISOString()}
	modifiedTime={new Date().toISOString()}
>
	<SchemaOrg
		name={clinicInfo.name}
		description={clinicInfo.description}
		address={clinicInfo.address}
		telephone={clinicInfo.telephone}
		email={clinicInfo.email}
		openingHours={clinicInfo.openingHours}
		services={clinicInfo.services}
		specialists={clinicInfo.specialists}
	/>
	
	<Header />
	<main id="main-content">
		<Hero />
		<Services />
		<Features />
		<Team />
		<Testimonials />
		<Resources />
		<Blog />
		<FAQ />
		<Contact />
		<Appointment />
	</main>
	<Footer />
</Layout>
