          <button id="send-message" class="bg-blue-500 text-white px-4 flex items-center justify-center hover:bg-blue-600 transition-colors cursor-pointer">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8" />
            </svg>
            <span class="sr-only">Enviar</span>
          </button>
        </div>
      </div>
    `;
    
    document.body.appendChild(chatModal);
    
    // Mostrar notificaci√≥n despu√©s de 20 segundos
    setTimeout(() => {
      const notification = document.querySelector('.chat-notification');
      if (notification) {
        notification.classList.remove('hidden');
      }
    }, 20000);
    
    // Eventos del chat
    chatButton.addEventListener('click', () => {
      chatModal.classList.remove('scale-0');
      chatModal.classList.add('scale-100');
      chatModal.setAttribute('aria-hidden', 'false');
      
      // Ocultar notificaci√≥n al abrir el chat
      const notification = document.querySelector('.chat-notification');
      if (notification) {
        notification.classList.add('hidden');
      }
    });
    
    // Cerrar chat
    document.getElementById('close-chat')?.addEventListener('click', () => {
      chatModal.classList.remove('scale-100');
      chatModal.classList.add('scale-0');
      chatModal.setAttribute('aria-hidden', 'true');
    });
    
    // Enviar mensaje
    const chatInput = document.getElementById('chat-input') as HTMLInputElement;
    const sendMessage = document.getElementById('send-message');
    const chatMessages = document.getElementById('chat-messages');
    
    // Valores por defecto para el usuario
    let userName = '';
    let avatar = '/img/logo/logo.png'; // Cambiar por avatar del usuario
    
    function addMessage(message: string, sender: 'user' | 'assistant') {
      if (!chatMessages || !message.trim()) return;
      
      const messageElement = document.createElement('div');
      messageElement.className = `chat-message ${sender} mb-4`;
      
      let avatar, bgColor, textAlign, order;
      
      if (sender === 'user') {
        avatar = '/img/logo/logo.png'; // Cambiar por avatar del usuario
        bgColor = 'bg-blue-600';
        textAlign = 'items-end';
        order = 'order-1';
      } else {
        avatar = 'https://media.cssninja.io/shuriken/avatars/9.svg';
        bgColor = 'bg-blue-500/20';
        textAlign = 'items-start';
        order = 'order-2';
      }
      
      messageElement.innerHTML = `
        <div class="flex items-end ${sender === 'user' ? 'justify-end' : ''}">
          <div class="flex flex-col space-y-2 text-sm max-w-xs mx-2 ${order} ${textAlign}">
            <div class="px-4 py-2 rounded-lg ${bgColor} text-gray-200">
              ${message}
            </div>
          </div>
          <img src="${avatar}" alt="Avatar" class="w-8 h-8 rounded-full ${sender === 'user' ? 'order-2' : 'order-1'}">
        </div>
      `;
      
      chatMessages.appendChild(messageElement);
      chatMessages.scrollTop = chatMessages.scrollHeight;
    }
    
    // Funci√≥n para manejar el env√≠o de mensajes
    function handleSendMessage() {
      if (!chatInput || !chatInput.value.trim()) return;
      
      const message = chatInput.value;
      addMessage(message, 'user');
      chatInput.value = '';
      
      // Simular respuesta autom√°tica despu√©s de 1 segundo
      setTimeout(() => {
        const responses = [
          "Entiendo c√≥mo te sientes. ¬øPodr√≠as contarme un poco m√°s sobre esa situaci√≥n?",
          "Gracias por compartir eso conmigo. Es normal sentirse as√≠ en estas circunstancias.",
          "Estoy aqu√≠ para ayudarte. ¬øDesde cu√°ndo has estado experimentando esto?",
          "¬øTe gustar√≠a agendar una sesi√≥n para hablar m√°s en profundidad sobre esto?",
          "Vamos a trabajar juntos en esto. ¬øHas intentado alguna t√©cnica de relajaci√≥n?"
        ];
        const randomResponse = responses[Math.floor(Math.random() * responses.length)];
        addMessage(randomResponse, 'assistant');
      }, 1000);
    }
    
    // Eventos para enviar mensajes
    sendMessage?.addEventListener('click', handleSendMessage);
    
    chatInput?.addEventListener('keypress', (e) => {
      if (e.key === 'Enter') {
        handleSendMessage();
      }
    });
  }
</script>
