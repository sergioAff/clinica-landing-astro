<style>
  .hero-radial-bg {
    position: absolute;
    width: 100%;
    max-width: 800px;
    height: 100%;
    background: radial-gradient(circle, rgba(59, 130, 246, 0.15) 0%, rgba(16, 24, 39, 0) 70%);
    opacity: 0.8;
  }
  
  .hero-halo-pulse {
    position: absolute;
    width: 400px;
    height: 400px;
    background: radial-gradient(circle, rgba(59, 130, 246, 0.15) 0%, rgba(16, 24, 39, 0) 70%);
    opacity: 0.5;
    border-radius: 50%;
    animation: pulse 8s ease-in-out infinite alternate;
  }
  
  .glassmorphism {
    background: rgba(30, 41, 59, 0.4);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.05);
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.2);
  }
  
  .glassmorphism-lg {
    background: rgba(30, 41, 59, 0.3);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.08);
    box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.3);
    transition: all 0.5s cubic-bezier(0.175, 0.885, 0.32, 1.275);
  }
  
  .glassmorphism-lg:hover {
    transform: translateY(-5px);
    box-shadow: 0 30px 60px -15px rgba(59, 130, 246, 0.3);
  }
  
  .glassmorphism-lg:hover {
    transform: translateY(-5px);
    box-shadow: 0 30px 60px -15px rgba(59, 130, 246, 0.3);
  }
  
  .glass-emoji {
    backdrop-filter: blur(4px);
    background: rgba(30, 41, 59, 0.4);
    border: 1px solid rgba(255, 255, 255, 0.1);
  }
  
  .emoji-glow {
    box-shadow: 0 0 20px rgba(59, 130, 246, 0.5);
  }
  
  @keyframes pulse {
    0% {
      transform: scale(0.8);
      opacity: 0.3;
    }
    100% {
      transform: scale(1.2);
      opacity: 0.5;
    }
  }
  
  @keyframes float-slow {
    0% {
      transform: translateY(0px) rotate(-5deg);
    }
    100% {
      transform: translateY(-15px) rotate(-3deg);
    }
  }
  
  @keyframes float-medium {
    0% {
      transform: translateY(0px) rotate(3deg);
    }
    100% {
      transform: translateY(-10px) rotate(5deg);
    }
  }
  
  @keyframes float-fast {
    0% {
      transform: translateY(0px);
    }
    100% {
      transform: translateY(-8px);
    }
  }
  
  .animate-float-slow {
    animation: float-slow 6s ease-in-out infinite alternate;
  }
  
  .animate-float-medium {
    animation: float-medium 4s ease-in-out infinite alternate;
  }
  
  .animate-float-fast {
    animation: float-fast 3s ease-in-out infinite alternate;
  }
  
  .animate-bounce-slow {
    animation: bounce 2s infinite;
  }
  
  .animate-blob {
    animation: blob 7s infinite;
  }
  
  .animation-delay-2000 {
    animation-delay: 2s;
  }
  
  .animation-delay-4000 {
    animation-delay: 4s;
  }
  
  @keyframes blob {
    0% {
      transform: translate(0px, 0px) scale(1);
    }
    33% {
      transform: translate(30px, -50px) scale(1.1);
    }
    66% {
      transform: translate(-20px, 20px) scale(0.9);
    }
    100% {
      transform: translate(0px, 0px) scale(1);
    }
  }
  
  .animate-emoji-spin-scale {
    animation: emoji-spin-scale 5s ease-in-out infinite alternate;
  }
  
  @keyframes emoji-spin-scale {
    0% {
      transform: rotate(-5deg) scale(0.9);
    }
    100% {
      transform: rotate(5deg) scale(1.1);
    }
  }

  /* Mejora para lectores de pantalla - ocultar animaciones */
  @media (prefers-reduced-motion: reduce) {
    .animate-float-slow,
    .animate-float-medium,
    .animate-float-fast,
    .animate-emoji-spin-scale,
    .animate-blob,
    .animate-bounce-slow,
    .hero-halo-pulse {
      animation: none;
    }
    
    .glassmorphism:hover,
    .group:hover .glassmorphism-lg,
    .glassmorphism-lg:hover {
      transform: none;
    }
  }
  
  /* Ajustes para diferentes dispositivos */
  @media (max-width: 640px) {
    .glassmorphism-lg {
      max-width: 90vw;
    }
  }
</style>

<script>
  // Carga optimizada de AOS para animaciones al scroll
  document.addEventListener('DOMContentLoaded', () => {
    // Verificar si AOS ya existe
    if (typeof (window as any).AOS === 'undefined') {
      // Cargar estilos CSS
      const aosCSS = document.createElement('link');
      aosCSS.rel = 'stylesheet';
      aosCSS.href = 'https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.css';
      document.head.appendChild(aosCSS);
      
      // Cargar script con carga diferida para mejorar el rendimiento inicial
      setTimeout(() => {
        const aosScript = document.createElement('script');
        aosScript.src = 'https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js';
        aosScript.async = true;
        aosScript.onload = () => {
          // Inicializar AOS con configuraci√≥n optimizada
          (window as any).AOS.init({
            duration: 800,
            once: true,
            offset: 50,
            disable: window.matchMedia('(prefers-reduced-motion: reduce)').matches
          });
        };
        document.body.appendChild(aosScript);
      }, 100); // Peque√±o retraso para priorizar el contenido principal
    } else {
      // Si AOS ya existe, solo inicializarlo
      (window as any).AOS.init();
    }
  });

  // A√±adir evento para mejorar accesibilidad del scroll indicator
  document.addEventListener('DOMContentLoaded', () => {
    const scrollIndicator = document.querySelector('.bottom-8.left-1\\/2');
    if (scrollIndicator) {
      scrollIndicator.addEventListener('click', () => {
        const nextSection = document.querySelector('section:nth-of-type(2)');
        if (nextSection) {
          nextSection.scrollIntoView({ behavior: 'smooth' });
        }
      });
    }
  });
</script>
