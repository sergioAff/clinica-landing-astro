---
// Enlaces de navegaci칩n principal
const navLinks = [
  { text: "Inicio", href: "/", isActive: true },
  { text: "Servicios", href: "#services" },
  { text: "Equipo", href: "#team" },
  { text: "Recursos", href: "#resources" },
  { text: "Blog", href: "#blog" },
  { text: "FAQ", href: "#faq" },
  { text: "Contacto", href: "#contact" }
];

// Ruta actual para resaltar el elemento activo
const currentPath = Astro.url.pathname;
---

<nav aria-label="Navegaci칩n principal">
  <ul class="flex items-center space-x-1">
    {navLinks.map((link) => (
      <li>
        <a 
          href={link.href}
          class={`relative px-3 py-2 text-sm font-medium rounded-lg transition-all duration-300
            flex items-center overflow-hidden group cursor-pointer
            ${link.href === "/" && currentPath === "/" || link.href !== "/" && currentPath.includes(link.href) 
              ? "text-blue-400 bg-blue-500/10" 
              : "text-gray-300 hover:text-blue-400 hover:bg-blue-500/5"}`}
          aria-current={link.href === "/" && currentPath === "/" || link.href !== "/" && currentPath.includes(link.href) ? "page" : undefined}
        >
          <span class="absolute inset-0 w-full h-full bg-gradient-to-r from-blue-500/10 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></span>

          <span class={`absolute bottom-0 left-1/2 -translate-x-1/2 h-0.5 bg-blue-500 rounded-full transition-all duration-300 ease-out-cubic cursor-pointer
            ${link.href === "/" && currentPath === "/" || link.href !== "/" && currentPath.includes(link.href)
              ? "w-1/2 opacity-100" 
              : "w-0 opacity-0 group-hover:w-1/3 group-hover:opacity-70"}`}
          ></span>
          

          <span class="z-10 transform transition-transform duration-300 group-hover:-translate-y-0.5 cursor-pointer">{link.text}</span>
        </a>
      </li>
    ))}
  </ul>
</nav>

<style>
  /* Transici칩n cubic-bezier para un efecto m치s suave */
  .ease-out-cubic {
    transition-timing-function: cubic-bezier(0.33, 1, 0.68, 1);
  }

</style> 