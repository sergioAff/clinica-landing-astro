---
import Link from "./Link.astro"

 const navItems = [
    {
        label: "Inicio",
        id: "home"
    },
    {
        label: "Acerca de",
        id: "about"
    },
    {
        label: "Servicios",
        id: "services"
    },
 ]
---

<nav>
    <ul class="flex items-center gap-6">
        {navItems.map((item) => (
            <li class="transition-all duration-200 ease-in-out active:scale-95 hover:scale-105">
                <Link href={`#${item.id}`} text={item.label} />
            </li>
        ))}
    </ul>
</nav>